{% extends "template.twig" %}

{% block links %}
    <link rel="stylesheet" href="assets/css/fonts.css">
    <link rel="stylesheet" href="assets/css/icons.css">
    <link rel="stylesheet" href="assets/css/login-register.css">
{% endblock %}

{% block content %}
    <header>
        <a href="index.php">
            <img src="assets/images/global_icon.svg" alt="global icon">
            <h1>Groupomania</h1>
        </a>
    </header>

    <form class="sign-form" method="post">
        {% if errors %}
            <p class="error">Identifiant ou mot de passe incorrect</p>
        {% endif %}

        <div>
            <input class="full-width {% if errors %}error{% endif %}" id="login" type="text" name="login" placeholder="Email ou pseudonyme" required>
        </div>
        <div class="eye-container">
            <input class="full-width {% if errors %}error{% endif %}" id="password" type="password" name="password" placeholder="Mot de passe" required>
            <i class="icon icon-invisible"></i>
        </div>
        <div>
            <input class="center" type="submit" value="SE CONNECTER">
        </div>
    </form>

    <a class="create-account" href="index.php?action=users.register">CRÉER UN COMPTE</a>

    <a id="forgot-password" href="">Mot de passe oublié ?</a>
{% endblock %}

{% block scripts %}
    <script src="assets/js/passwordVisibilty.js"></script>
{% endblock %}
