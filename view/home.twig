{% extends "template.twig" %}

{% block links %}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/css/home.css">
{% endblock %}

{% block content %}
    {% for post in posts %}
        <article class="post">
            <div class="top">
                <i class="fas fa-user-circle"></i>
                <p>
                    <b class="author">{{ post.getAuthor() }}</b><br>
                    <span class="time">{{ post.getElapsedTime() }}</span>
                </p>
                <div class="three-dots"></div>
            </div>

            <h2>{{ post.getTitle() }}</h2>
            <div class="content">{{ post.getContent() }}</div>
            {# if the number of comments is more than 0, add "s" to the word #}
            <p class="nb-comments"><i class="far fa-comment"></i><span>0 Commentaire</span></p>
        </article>
    {% endfor %}
{% endblock %}

{% block scripts %}{% endblock %}
